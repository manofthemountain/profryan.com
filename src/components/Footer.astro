<style>
	.site-footer {
		margin-top: 3rem;
		padding: 2.5rem 1rem 3rem;
		background: rgba(var(--surface-2), 1);
		border-top: 1px solid rgba(var(--border), 1);
	}

	.footer-inner {
		width: min(100%, var(--content-max));
		margin: 0 auto;
	}

	.footer-top {
		display: grid;
		grid-template-columns: 1fr auto;
		gap: 2rem;
		align-items: start;
		padding-bottom: 1.75rem;
		border-bottom: 1px solid rgba(var(--border), 1);
	}

	.brand-title {
		margin: 0 0 0.25rem 0;
		font-weight: 900;
		letter-spacing: 0.02em;
		color: rgb(var(--text-strong));
	}

	.brand-tagline {
		margin: 0;
		max-width: 60ch;
		color: rgba(var(--text-muted), 1);
		line-height: 1.6;
	}

	.footer-nav {
		display: grid;
		grid-auto-flow: column;
		grid-auto-columns: minmax(140px, auto);
		gap: 2rem;
	}

	.nav-title {
		margin: 0 0 0.6rem 0;
		font-size: 0.8rem;
		letter-spacing: 0.12em;
		text-transform: uppercase;
		font-weight: 900;
		color: rgba(var(--text-muted), 1);
	}

	.nav-col a {
		display: block;
		padding: 0.25rem 0;
		text-decoration: none;
		color: rgb(var(--text));
	}

	.nav-col a:hover {
		color: var(--accent);
		text-decoration: underline;
		text-underline-offset: 3px;
	}

	.footer-bottom {
		display: flex;
		justify-content: space-between;
		align-items: center;
		gap: 1rem;
		padding-top: 1.25rem;
	}

	.copyright {
		margin: 0;
		font-size: 0.9rem;
		color: rgba(var(--text-muted), 1);
	}

	.bottom-actions {
		display: flex;
		align-items: center;
		gap: 1rem;
	}

	.back-to-top {
		text-decoration: none;
		color: rgba(var(--text-muted), 1);
		font-size: 0.9rem;
		padding: 0.35rem 0.6rem;
		border-radius: 999px;
		border: 1px solid rgba(var(--border), 1);
		background: rgba(var(--bg), 0.6);
	}

	.back-to-top:hover {
		color: rgb(var(--text-strong));
		border-color: rgba(var(--border), 1);
	}

	.social-links {
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}

	.social-links a {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		width: 36px;
		height: 36px;
		border-radius: 10px;
		border: 1px solid rgba(var(--border), 1);
		background: rgba(var(--bg), 0.6);
		color: rgb(var(--text));
		text-decoration: none;
	}

	.social-links a:hover {
		color: rgb(var(--text-strong));
		border-color: rgba(var(--border), 1);
	}

	@media (max-width: 900px) {
		.footer-top {
			grid-template-columns: 1fr;
		}

		.footer-nav {
			grid-auto-flow: row;
			grid-template-columns: repeat(2, minmax(0, 1fr));
			gap: 1.25rem;
		}
	}

	@media (max-width: 560px) {
		.footer-nav {
			grid-template-columns: 1fr;
		}

		.footer-bottom {
			flex-direction: column;
			align-items: flex-start;
		}

		.bottom-actions {
			width: 100%;
			justify-content: space-between;
		}
	}
</style>