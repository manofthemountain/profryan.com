<style>
	footer {
		padding: 3em 1em 5em 1em;
		background: linear-gradient(var(--gray-gradient)) no-repeat;
		color: rgb(var(--gray));
		text-align: center;
	}

	.footer-content {
		max-width: 60ch;
		margin: 0 auto;
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
	}

	.meta {
		font-size: 0.9em;
		opacity: 0.85;
	}

	.build {
		font-size: 0.8em;
		opacity: 0.6;
	}

	.social-links {
		display: flex;
		justify-content: center;
		gap: 1em;
		margin-top: 0.5em;
	}

	.social-links a {
		text-decoration: none;
		color: rgb(var(--gray));
	}

	.social-links a:hover {
		color: rgb(var(--gray-dark));
	}
</style>